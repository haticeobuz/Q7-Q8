


def count_vowels (input_string):

    count = 0
    i = 0
    vowel= ['a','e','i','o','u','A','E','I','O','U']

    for i in input_string:
        if i in vowel:
            count += 1

    return count
    

input_string = "Hello, World!"

print("Number of vowels in the input string:", count_vowels(input_string)) #3

input_string = "Python COUNT VOWELS Coding."

print("Number of vowels in the input string:", count_vowels(input_string)) #7

input_string = "QWEJFasdmmn."

print("Number of vowels in the input string:", count_vowels(input_string)) #2
